{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Lego Save",
    "name": "lego-save",
    "display_name": "Lego Save",
    "namespace": "lego-save",
    "uihints": {
      "title": "Lego Save",
      "icon": "elyra:lego-save",
      "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
    },
    "properties": {
        "schema_name": {
          "title": "Schema Name",
          "description": "The schema associated with this instance",
          "type": "string",
          "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
          "minLength": 1
        },
        "display_name": {
            "title": "Display Name",
            "description": "The display name of the File to be saved",
            "type": "string",
            "minLength": 1
        },
        "metadata": {
            "description": "Additional data specific to this Lego Save",
            "type": "object",
            "properties": {
              "name": {
                "title": "name",
                "description": "Lego Title",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Title"
                },
                "minLength": 1
              },
              "description": {
                "title": "description",
                "description": "Lego Description",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Description"
                },
                "minLength": 1
              },
              "access_type": {
                "title": "language",
                "description": "Access Type defines private or public lego",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Access Type"
                },
                "minLength": 1
              },
              "current_version": {
                "title": "language",
                "description": "Current Version indicates the current version of the lego",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Current Version"
                },
                "minLength": 1
              },
              "language": {
                "title": "language",
                "description": "Lego Language",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Language"
                },
                "minLength": 1
              },
              "input_schema": {
                "title": "input_schema",
                "description": "Lego Input Schema",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Input Schema"
                }
              },
              "param_data": {
                "title": "param_data",
                "description": "Lego Parameter Data",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Parameter Data"
                }
              },
              "custom_cell": {
                "title": "custom_cell",
                "description": "Custom Lego Flag",
                "type": "boolean",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Custom Lego Flag"
                }
              },
              "code": {
                "title": "code",
                "description": "Lego code",
                "type": "array",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego code"
                },
                "minLength": 1
              },
              "tags": {
                "title": "tags",
                "description": "Lego Tags",
                "type": "array",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Tags"
                },
                "minLength": 1
              },
              "type": {
                "title": "type",
                "description": "Lego Type",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego ID"
                },
                "minLength": 1
              },
              "order_properties": {
                "title": "order properties",
                "description": "Order properties",
                "type": "array",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego order properties"
                },
                "minLength": 1
              }
            },
            "required": ["name", "description", "code"]
        }
    },
    "required": ["schema_name", "display_name", "metadata"]
}
