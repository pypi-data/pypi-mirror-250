<odoo>
    <record id="view_attendance_report_wizard_form" model="ir.ui.view">
        <field name="name">attendance.report.wizard.form</field>
        <field name="model">attendance.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="employee_id" readonly="1" />
                <group>
                    <field
            name="date"
            options="{'datepicker': {'pickTime': false, 'startView': 'months', 'minViewMode': 'months', 'maxViewMode': 'years'}}"
          />
                </group>
                <footer>
                    <button
            string="Generate Report"
            type="object"
            class="btn-primary"
            name="generate_report"
          />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Define la acciÃ³n de informe -->
    <record id="action_report_attendance" model="ir.actions.report">
        <field name="name">Attendance Report</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field
      name="report_name"
    >hr_attendance_mitxelena.report_hr_attendance_template</field>
    </record>

    <record id="action_attendance_report_wizard" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="res_model">attendance.report.wizard</field>
        <field name="view_mode">form</field>
        <field
      name="view_id"
      ref="hr_attendance_mitxelena.view_attendance_report_wizard_form"
    />
        <field name="target">new</field>
    </record>

    <menuitem
    id="menu_attendance_report"
    name="Monthly Report"
    parent="hr_attendance.menu_hr_attendance_root"
    action="hr_attendance_mitxelena.action_attendance_report_wizard"
  />
</odoo>
