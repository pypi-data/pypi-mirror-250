{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Save File",
    "name": "save-and-close",
    "display_name": "Save File",
    "namespace": "save-and-close",
    "uihints": {
      "title": "Save File",
      "icon": "elyra:save-and-close",
      "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
    },
    "properties": {
      "schema_name": {
        "title": "Schema Name",
        "description": "The schema associated with this instance",
        "type": "string",
        "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
        "minLength": 1
      },
      "display_name": {
        "title": "Display Name",
        "description": "The display name of the File to be saved",
        "type": "string",
        "minLength": 1
      },
      "metadata": {
        "description": "Additional data specific to this Save File",
        "type": "object",
        "properties": {
          "workflow_id": {
            "title": "workflow_id",
            "description": "ID of the workflow",
            "type": "string",
            "uihints": {
              "field_type": "textinput",
              "category": "WorkflowID"
            },
            "minLength": 1
          },
          "cancel": {
            "title": "cancel",
            "description": "describes whether the workflow close should canceled.",
            "type": "boolean"
          },
          "execution_id": {
            "title": "execution_id",
            "description": "ID of the last execution",
            "type": "string",
            "uihints": {
              "field_type": "textinput",
              "category": "ExecutionID"
            }
          },
          "notebook_id": {
            "title": "notebook_id",
            "description": "file name of the notebook",
            "type": "string",
            "uihints": {
              "field_type": "textinput",
              "category": "NotebookID"
            },
            "minLength": 1
          },
          "workflow_name": {
            "title": "workflow_name",
            "description": "new workflow name",
            "type": "string",
            "minLength": 1
          },       
          "workflow_description": {
            "title": "workflow_description",
            "description": "new workflow description",
            "type": "string",
            "minLength": 1
          }   
        },
        "required": ["notebook_id", "workflow_id"]
      }
    },
    "required": ["schema_name", "display_name", "metadata"]
  }