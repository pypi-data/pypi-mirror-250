{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Lego Search",
    "name": "lego-search",
    "display_name": "Lego Search",
    "namespace": "lego-search",
    "uihints": {
      "title": "Lego Search",
      "icon": "elyra:lego-search",
      "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
    },
    "properties": {
        "schema_name": {
          "title": "Schema Name",
          "description": "The schema associated with this instance",
          "type": "string",
          "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
          "minLength": 1
        },
        "display_name": {
            "title": "Display Name",
            "description": "The display name of the File to be saved",
            "type": "string",
            "minLength": 1
        },
        "metadata": {
            "description": "Additional data specific to this Lego Search",
            "type": "object",
            "properties": {
              "search_text": {
                "title": "search_text",
                "description": "Search text",
                "type": "string",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Search Text"
                },
                "minLength": 1
              },
              "legos": {
                "title": "type",
                "description": "Legos List",
                "type": "array",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Legos List"
                },
                "minLength": 1
              }
            },
            "required": ["search_text"]
        }
    },
    "required": ["schema_name", "display_name", "metadata"]
}
