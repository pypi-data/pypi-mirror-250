{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lego Search",
  "name": "get-credential-schema",
  "display_name": "Get Credential Schema",
  "namespace": "get-credential-schema",
  "uihints": {
    "title": "Get Credential Schema",
    "icon": "elyra:get-credential-schema",
    "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
  },
  "properties": {
      "schema_name": {
        "title": "Schema Name",
        "description": "The schema associated with this instance",
        "type": "string",
        "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
        "minLength": 1
      },
      "display_name": {
          "title": "Display Name",
          "description": "The display name of the File to be saved",
          "type": "string",
          "minLength": 1
      },
      "metadata": {
          "description": "Additional data specific to this Lego Search",
          "type": "object",
          "properties": {
            "connector_type": {
              "title": "connector_type",
              "description": "Connector Type to get schema",
              "type": "string",
              "uihints": {
                "field_type": "textinput",
                "category": "Connector Type Text"
              },
              "minLength": 1
            }
          },
          "required": ["connector_type"]
      }
  },
  "required": ["schema_name", "display_name", "metadata"]
}
