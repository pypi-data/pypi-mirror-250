{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Credential Store",
  "name": "credential-store",
  "display_name": "Credential Store",
  "namespace": "credential-store",
  "uihints": {
    "title": "Credential Store",
    "icon": "elyra:credential-store",
    "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
  },
  "properties": {
    "schema_name": {
      "title": "Schema Name",
      "description": "The schema associated with this instance",
      "type": "string",
      "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
      "minLength": 1
    },
    "display_name": {
      "title": "Display Name",
      "description": "The display name of the Credential Store",
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "description": "Additional data specific to this Credential Store",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Credential Store description",
          "type": "string"
        },
        "tags": {
          "title": "Tags",
          "description": "Tags for categorizing credentials",
          "type": "array",
          "uihints": {
            "field_type": "tags"
          }
        },
        "credential_name": {
          "title": "Name",
          "description": "Credential Store implementation Name",
          "type": "string",
          "uihints": {
            "field_type": "textinput",
            "category": "Credential"
          },
          "minLength": 1
        },
        "id": {
          "title": "ID",
          "description": "Credential  ID",
          "type": "string"
        },
        "type": {
          "title": "Type",
          "description": "Credential  Type",
          "type": "string"
        },
        "credential_value": {
          "title": "Value",
          "description": "Credential Store code lines",
          "type": "object",
          "properties": {
            
          },
          "uihints": {
            "secure": true,
            "field_type": "textinput",
            "category": "Credential"
          }
        }
      },
      "required": ["credential_name", "credential_value"]
    }
  },
  "required": ["schema_name", "display_name", "metadata"]
}
