{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Credential Save",
    "name": "credential-save",
    "display_name": "Credential Save",
    "namespace": "credential-save",
    "uihints": {
      "title": "Credential Save",
      "icon": "elyra:credential-save",
      "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
    },
    "properties": {
      "schema_name": {
        "title": "Schema Name",
        "description": "The schema associated with this instance",
        "type": "string",
        "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
        "minLength": 1
      },
      "display_name": {
        "title": "Display Name",
        "description": "The display name of the Credential Save",
        "type": "string",
        "minLength": 1
      },
      "metadata": {
        "description": "Additional data specific to this Credential Save",
        "type": "object",
        "properties": {
          "description": {
            "title": "Description",
            "description": "Credential description",
            "type": "string"
          },
          "tags": {
            "title": "Tags",
            "description": "Tags for categorizing credentials",
            "type": "array",
            "uihints": {
              "field_type": "tags"
            }
          },
          "name": {
            "title": "Name",
            "description": "Credential implementation Name",
            "type": "string",
            "uihints": {
              "field_type": "textinput",
              "category": "Credential"
            },
            "minLength": 1
          },
          "type": {
            "title": "Type",
            "description": "Credential Type",
            "type": "string"
          },
          "connectorData": {
            "title": "Data",
            "description": "Connector data",
            "type": "string"
          }
        },
        "required": ["name", "connectorData", "type"]
      }
    },
    "required": ["schema_name", "display_name", "metadata"]
  }
  
