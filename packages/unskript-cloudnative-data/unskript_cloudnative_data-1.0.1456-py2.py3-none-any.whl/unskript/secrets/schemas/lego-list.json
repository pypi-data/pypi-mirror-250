{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Lego List",
    "name": "lego-list",
    "display_name": "Lego List",
    "namespace": "lego-list",
    "uihints": {
      "title": "Lego List",
      "icon": "elyra:lego-list",
      "reference_url": "https://elyra.readthedocs.io/en/latest/user_guide/code-snippets.html"
    },
    "properties": {
        "schema_name": {
          "title": "Schema Name",
          "description": "The schema associated with this instance",
          "type": "string",
          "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
          "minLength": 1
        },
        "display_name": {
            "title": "Display Name",
            "description": "The display name of the File to be saved",
            "type": "string",
            "minLength": 1
        },
        "metadata": {
            "description": "Additional data specific to this Lego List",
            "type": "object",
            "properties": {
              "is_unskript": {
                "title": "is_unskript",
                "description": "Describes whether to list standard or custom legos",
                "type": "boolean",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego Search Text"
                },
                "minLength": 1
              },
              "legos": {
                "title": "tags",
                "description": "Legos List",
                "type": "array",
                "uihints": {
                  "field_type": "textinput",
                  "category": "Lego List"
                },
                "minLength": 1
              }
            },
            "required": []
        }
    },
    "required": ["schema_name", "display_name", "metadata"]
}