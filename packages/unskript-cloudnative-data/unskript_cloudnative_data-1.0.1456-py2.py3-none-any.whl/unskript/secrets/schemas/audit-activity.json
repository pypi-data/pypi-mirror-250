{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Audit User Activity",
    "name": "audit-user-activity",
    "display_name": "Audit User Activity",
    "namespace": "audit-user-activity",
    "uihints": {
      "title": "Audit User Activity",
      "icon": "elyra:audit-logs"
    },
    "properties": {
        "schema_name": {
          "title": "Schema Name",
          "description": "The schema associated with this instance",
          "type": "string",
          "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
          "minLength": 1
        },
        "display_name": {
            "title": "Display Name",
            "description": "The display name of the File to be saved",
            "type": "string",
            "minLength": 1
        },
        "metadata": {
            "description": "Additional data specific to this Audit User Activity",
            "type": "object",
            "properties": {
              "user_email": {
                "title": "type",
                "description": "User Email",
                "type": "string",
                "uihints": {
                  "field_type": "textinput"
                },
                "minLength": 1
              },
              "action": {
                "title": "type",
                "description": "Action",
                "type": "string",
                "uihints": {
                  "field_type": "textinput"
                },
                "minLength": 1
              },
              "index_name": {
                "title": "type",
                "description": "Index Type",
                "type": "string",
                "uihints": {
                  "field_type": "textinput"
                },
                "minLength": 1
              },
              "payload": {
                "title": "type",
                "description": "Payload",
                "type": "string",
                "uihints": {
                  "field_type": "textinput"
                },
                "minLength": 1
              }
            },
            "required": ["user_email","action","payload"]
        }
    },
    "required": ["schema_name", "display_name", "metadata"]
}
